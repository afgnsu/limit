<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Money</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.money %></td>
        <td><%= order.product.name %></td>
        <td><%# link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_product_order_path(@product,order) %></td>
        <td><%= link_to 'Destroy', [@product,order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

